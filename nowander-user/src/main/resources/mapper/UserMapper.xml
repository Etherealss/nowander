<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowander.blog.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.nowander.common.pojo.po.User">
        <id column="id" property="id"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="avatar" property="avatar"/>
        <result column="user_type" property="userType"/>
        <result column="liked_count" property="likedCount"/>
        <result column="collected_count" property="collectedCount"/>
        <result column="school" property="school"/>
        <result column="major" property="major"/>
        <result column="register_date" property="registerDate"/>
    </resultMap>
    <select id="selectUserPermissions" resultType="java.lang.String">
        SELECT p.`id`, p.`permission_name`
        FROM permission p
                 INNER JOIN user_permission up
                            ON p.`id` = up.`permission_id`
        WHERE up.`user_id` = #{id};
    </select>
    <select id="selectUserByUsername" resultType="com.nowander.common.pojo.po.User">
        SELECT * FROM `user` WHERE username = #{username};
    </select>
    <select id="selectLoginUserByUsername" resultType="com.nowander.common.pojo.po.User">
        SELECT * FROM `user` WHERE username = #{username} AND `password` = #{password};
    </select>

</mapper>
